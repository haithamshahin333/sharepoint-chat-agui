# MSAL Configuration - Required for Azure AD authentication
NEXT_PUBLIC_MSAL_CLIENT_ID=your-azure-app-client-id
NEXT_PUBLIC_MSAL_TENANT_ID=your-azure-tenant-id

# Optional: Custom authority (use only if you need specific authority)
# NEXT_PUBLIC_MSAL_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# Development environment (automatically detected)
# NEXT_PUBLIC_REDIRECT_URI will use window.location.origin in the browser
NEXT_PUBLIC_API_SCOPE=api://app-client-id/access_as_user

# Pydantic Agent API URL
PYDANTIC_AGENT_URL=http://localhost:8000/

# Search Categories Configuration
# JSON array format: [{"value":"id","label":"Display Name"}]
NEXT_PUBLIC_SEARCH_CATEGORIES=[{"value":"all","label":"All Categories"},{"value":"basketball","label":"Basketball"},{"value":"golf","label":"Golf"}]

# Default selected category (must match a value from categories above)
NEXT_PUBLIC_DEFAULT_CATEGORY=all

# CopilotKit Telemetry - Disable anonymous telemetry collection
COPILOTKIT_TELEMETRY_DISABLED=true
NEXT_TELEMETRY_DISABLED=1